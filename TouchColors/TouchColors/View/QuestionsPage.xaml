<Page x:Class="TouchColors.View.QuestionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:hlp="using:TouchColors.Helper"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      DataContext="{Binding Source={StaticResource Locator},
                            Path=QuestionsVM}"
      mc:Ignorable="d">

   <Page.Resources>
      <hlp:ColorInverter x:Key="ColorInverter" />
   </Page.Resources>
   <Grid>
      <Grid.Background>
         <SolidColorBrush Color="{Binding CurrentColor.RgbColor}" />
      </Grid.Background>
      <Button HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Click="{x:Bind ViewModel.NextColor_Click}">
         <TextBlock Style="{StaticResource HeaderTextBlockStyle}" Text="{Binding ButtonText}" />
         <Button.Foreground>
            <SolidColorBrush Color="{Binding CurrentColor.RgbColor, Converter={StaticResource ColorInverter}}" />
         </Button.Foreground>
         <Button.BorderBrush>
            <SolidColorBrush Color="{Binding CurrentColor.RgbColor, Converter={StaticResource ColorInverter}}" />
         </Button.BorderBrush>
      </Button>
   </Grid>
</Page>
