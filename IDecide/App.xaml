<Application 
    x:Class="IDecide.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"       
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone" >

    <Application.Resources>
        <localization:LocalizedStrings x:Key="LocalizedStrings"
            xmlns:localization="clr-namespace:IDecide.Localization" />

        <vm:ViewModelLocator xmlns:vm="clr-namespace:IDecide.ViewModel" x:Key="Locator" />

        <RadialGradientBrush x:Key="DefaultBackground"
                             Center="0.5,0.5" GradientOrigin="0,0"
                             RadiusY="0.5" RadiusX="0.5">
            <GradientStop Color="{StaticResource PhoneForegroundBrush}"  Offset="0.75"/>
            <GradientStop Color="#F4232323"/>
        </RadialGradientBrush>

        <ControlTemplate x:Key="RemoveButtonTemplate" TargetType="Button">
            <Grid>
                <Rectangle Fill="{StaticResource PhoneAccentBrush}">
                    <Rectangle.OpacityMask>
                        <ImageBrush ImageSource="..\Toolkit.Content\remove_white.png" />
                    </Rectangle.OpacityMask>
                </Rectangle>
                <ContentPresenter
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
            </Grid>
        </ControlTemplate>


    </Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService 
            Launching="Application_Launching" Closing="Application_Closing" 
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </Application.ApplicationLifetimeObjects>

</Application>