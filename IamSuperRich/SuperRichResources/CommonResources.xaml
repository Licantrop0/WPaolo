<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Name="MessageTextBoxStyle" TargetType="TextBox" >
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="FontSize" Value="40" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="BorderBrush" Value="{x:Null}" />
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                    <GradientStop Color="#FFEBE658" Offset="0" />
                    <GradientStop Color="#FFF5F8A1" Offset="1" />
                    <GradientStop Color="#FFFF7A01" Offset="0.523" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                    <GradientStop Color="#A7000000" Offset="0" />
                    <GradientStop Color="#69655656" Offset="1" />
                    <GradientStop Color="#848F8F8F" Offset="0.564" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>