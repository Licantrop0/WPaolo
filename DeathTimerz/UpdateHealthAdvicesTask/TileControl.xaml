<UserControl x:Class="UpdateHealthAdvicesTask.TileControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="336" Width="336">
    <Border>
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF131313" Offset="0"/>
                <GradientStop Color="#FF510000" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        
        <TextBlock Name="TileContent" Text="Questo è un suggerim di salute e blablabla"
                   LineHeight="90" LineStackingStrategy="BlockLineHeight"
                   Padding="12" TextTrimming="WordEllipsis"
                   TextWrapping="Wrap" FontSize="80"
                   FontFamily="/UpdateHealthAdvicesTask;component/CHILLER.TTF#Chiller" >
            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0.5,0.2" EndPoint="0.5,1">
                    <GradientStop Color="Red" Offset="0" />
                    <GradientStop Color="#CDC09696" Offset="1" />
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
    </Border>
</UserControl>