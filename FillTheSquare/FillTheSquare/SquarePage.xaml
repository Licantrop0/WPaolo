<phone:PhoneApplicationPage 
    x:Class="FillTheSquare.SquarePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="480"
    shell:SystemTray.IsVisible="False" Loaded="PhoneApplicationPage_Loaded">

    <Grid x:Name="LayoutRoot" Background="{StaticResource BackgroundGradientBrush}">
        <Grid.Resources>
            <Storyboard x:Name="PhilPiangeAppear">
                <DoubleAnimation Storyboard.TargetName="PhilPiangeImage"
                                     Storyboard.TargetProperty="Opacity"
                                     To="1" Duration="0:0:1" FillBehavior="HoldEnd" />
            </Storyboard>

            <Storyboard x:Name="PhilPiangeDisappear">
                <DoubleAnimation Storyboard.TargetName="PhilPiangeImage"
                                     Storyboard.TargetProperty="Opacity"
                                     To="0" Duration="0:0:1" FillBehavior="HoldEnd" />
            </Storyboard>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <MediaElement Source="Sounds\Partita.wav" AutoPlay="True"
                      MediaEnded="BackgroundMediaElement_MediaEnded" />

        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12">
            <TextBlock Name="TimeElapsedTextBlock"
                       Style="{StaticResource SquareHeadingsStyle}" 
                       Text="Seconds 000">
            </TextBlock>
        </StackPanel>

        <Border Height="452" Width="452" Grid.Row="1"
                BorderBrush="White" BorderThickness="1" >
            <Grid Name="MagicGrid">
                <Grid.Resources>
                    <Storyboard x:Name="RedFlash">
                        <ColorAnimation
                        Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                        To="Red" Duration="0:0:0.5" AutoReverse="True"  />
                    </Storyboard>

                    <Storyboard x:Name="Completed">
                        <ColorAnimation
                        Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                        To="{StaticResource PhoneAccentColor}" Duration="0:0:1" />
                    </Storyboard>
                </Grid.Resources>
            </Grid>
        </Border>

        <Image x:Name="PhilPiangeImage" Source="Phil/piange.png"
               Margin="100,0" Stretch="Uniform" Width="166" Grid.Row="1"
               VerticalAlignment="Top" HorizontalAlignment="Center"
               Opacity="0" IsHitTestVisible="False" />

        <Button Content="Reset" Click="ResetButton_Click"
                Style="{StaticResource ResetButtonStyle}" Grid.Row="2" 
                Height="76" Width="198" Margin="0,0,0,24" />

    </Grid>

</phone:PhoneApplicationPage>
