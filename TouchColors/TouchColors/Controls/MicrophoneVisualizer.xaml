<UserControl
    x:Class="TouchColors.Controls.MicrophoneVisualizer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" Unloaded="UserControl_Unloaded">

    <Grid>
      <StackPanel Orientation="Horizontal">
         <TextBlock FontSize="40" Text="Volume:" Margin="6,0" />
         <TextBlock Name="Score" FontSize="40" Text="" FontFamily="Segoe MDL2 Assets"/>
         <Ellipse Name="Hal" Opacity=".5" Height="100" Width="100">
            <Ellipse.Fill>
               <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                  <GradientStop Color="Black" Offset="0"/>
                  <GradientStop Color="#FFB91818" Offset="1"/>
               </LinearGradientBrush>
            </Ellipse.Fill>
         </Ellipse>
      </StackPanel>
   </Grid>
</UserControl>
