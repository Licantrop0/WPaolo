<phone:PhoneApplicationPage 
    x:Class="TrovaCAP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="768"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    shell:SystemTray.IsVisible="True">

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="8,16,0,29">

            <TextBlock x:Name="ApplicationTitle" Text="Trova il CAP" Style="{StaticResource PhoneTextNormalStyle}" TextAlignment="Center" FontSize="64" FontFamily="Segoe UI Semibold" >
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <LinearGradientBrush.RelativeTransform>
                            <CompositeTransform CenterY="0.5" CenterX="0.5" Rotation="-36" ScaleX="-0.95" SkewX="-60"/>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="#FF1582FB" Offset="0"/>
                        <GradientStop Color="#FF3BC6D0" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>


            <Grid x:Name="ContentPanel" Grid.Row="1" Margin="8,20,8,0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>


                <Image Source="/images/C_indirizzo.png" Stretch="Uniform" Grid.Row="0" VerticalAlignment="Bottom" Margin="0,12" />
                <StackPanel Grid.Row="0" Grid.Column="1">
                    <TextBlock Name="tbComuni" Text="Comune" Style="{StaticResource textStyle}" Margin="12,0" />
                    <toolkit:AutoCompleteBox Name="acbComuni" FilterMode="StartsWith" SelectionChanged="acbComuni_SelectionChanged" MinimumPopulateDelay="500" LostFocus="acbComuni_LostFocus" FontSize="23" MouseLeftButtonDown="acbComuni_MouseLeftButtonDown" />
                </StackPanel>

                <Image Source="/images/C_frazioni.png" Stretch="Uniform" Grid.Row="1" VerticalAlignment="Bottom"  Margin="0,12"/>
                <StackPanel Grid.Row="1" Grid.Column="1">
                    <TextBlock Name="tbFrazioni" Text="Frazione"  Style="{StaticResource textStyle}" Margin="12,0" />
                    <toolkit:AutoCompleteBox Name="acbFrazioni" FilterMode="Contains" IsDropDownOpen="True" MinimumPrefixLength="0" GotFocus="acbFrazioni_GotFocus" SelectionChanged="acbFrazioni_SelectionChanged" FontSize="23" LostFocus="acbFrazioni_LostFocus" MouseLeftButtonDown="acbFrazioni_MouseLeftButtonDown" />
                </StackPanel>

                <Image Source="/images/C_citta.png" Stretch="Uniform" Grid.Row="2" VerticalAlignment="Bottom" Margin="0,12"/>
                <StackPanel Grid.Row="2" Grid.Column="1">
                    <TextBlock Name="tbIndirizzi" Text="Indirizzo"  Style="{StaticResource textStyle}" Margin="12,0" />
                    <toolkit:AutoCompleteBox Name="acbIndirizzi"
                                             TextBoxStyle="{StaticResource TextWrappingStyle}"
                                             ItemTemplate="{StaticResource TextWrappingItemTemplate}"
                                             FilterMode="Contains" MinimumPrefixLength="2"
                                             SelectionChanged="acbIndirizzi_SelectionChanged"                                              
                                             MinimumPopulateDelay="500" FontSize="23" LostFocus="acbIndirizzi_LostFocus">				
                    </toolkit:AutoCompleteBox>
                </StackPanel>


                <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" >
                    <TextBlock Text="CAP: " Style="{StaticResource textStyle}" FontSize="64"  />
                    <TextBlock x:Name="tbCapResult" Text="00000" Style="{StaticResource textStyle}"  FontSize="64" />
                </StackPanel>
            </Grid>


        </StackPanel>
        <TextBox Height="105" Name="tbBenchmark" TextWrapping="Wrap" Grid.Row="1" Margin="24,105,0,12" />
    </Grid>


</phone:PhoneApplicationPage>