<phone:PhoneApplicationPage 
    x:Class="Scudetti.View.LevelsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:vm="clr-namespace:Scudetti.ViewModel"
    xmlns:hlp="clr-namespace:Scudetti.Helper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d" d:DesignHeight="768" d:DesignWidth="480"
    shell:SystemTray.IsVisible="True">

    <phone:PhoneApplicationPage.Resources>
        <vm:LevelsViewModel x:Key="LevelsVM" />
        <hlp:BooleanNegationConverter x:Key="BooleanNegationConv" />
    </phone:PhoneApplicationPage.Resources>

    <Grid x:Name="LayoutRoot" Background="{StaticResource DefaultBackground}"
          DataContext="{StaticResource LevelsVM}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding LocalizedResources.Levels, Source={StaticResource LocalizedStrings}}"
                   Style="{StaticResource PhoneTextTitle1Style}"
                   FontFamily="{StaticResource DefaultFont}"
                   Foreground="{StaticResource DefaultForeground}" />

        <ListBox Grid.Row="1" ItemsSource="{Binding Levels}"
                 SelectedItem="{Binding SelectedLevel, Mode=TwoWay}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                        <Grid Width="480">
                        	<Grid.RowDefinitions>
                        		<RowDefinition Height="Auto"/>
                        		<RowDefinition Height="Auto"/>
                        		<RowDefinition Height="Auto"/>
                        	</Grid.RowDefinitions>
                            <TextBlock Text="{Binding Key, StringFormat='Livello \{0\}'}"
                                       VerticalAlignment="Center" Foreground="Blue" FontSize="64" />
                            <Rectangle Fill="#FF2D2D2D" VerticalAlignment="Bottom" Height="10" Margin="12,0,12,3" Grid.Row="1"/>
                            <ProgressBar Maximum="{Binding Count}"
                                         Value="{Binding Completed}"
                                         VerticalAlignment="Bottom" Margin="0,0,0,6" RenderTransformOrigin="0.5,0.5" Background="#FFE2A41B" Foreground="#FFC0B000" Grid.Row="1" >
                            	<ProgressBar.RenderTransform>
                            		<CompositeTransform ScaleY="2.5"/>
                            	</ProgressBar.RenderTransform>
                            </ProgressBar>
                            <StackPanel Margin="12,0" Orientation="Horizontal" Grid.Row="2" d:LayoutOverrides="Height">
                            	<TextBlock Text="{Binding Completed}"
                            		VerticalAlignment="Center" Foreground="Blue" Margin="0" />
                            	<TextBlock Text="/"
                            		VerticalAlignment="Center" Foreground="Blue" Margin="0" />
                            	<TextBlock Text="{Binding Count}"
                            		VerticalAlignment="Center" Foreground="Blue" Margin="0" />
                            </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>

</phone:PhoneApplicationPage>
