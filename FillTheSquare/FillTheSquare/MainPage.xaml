<phone:PhoneApplicationPage 
    x:Class="FillTheSquare.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="768"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    shell:SystemTray.IsVisible="True">

    <Grid x:Name="LayoutRoot" Background="{StaticResource BackgroundGradientBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <MediaElement AutoPlay="True" Source="Sounds\Intro.mp3" />

        <StackPanel Grid.Row="0" Margin="12" >
            <TextBlock Style="{StaticResource SquareTitleStyle}" FontSize="48" >
                <Run Text="Phil  "/>
                <LineBreak/>
                <Run Text="   the"/>
                <LineBreak/>
                <Run Text="Square"/>
            </TextBlock>
        </StackPanel>
        <Canvas x:Name="ContentPanel" Margin="12,0" Grid.Row="1" >
            <Button Content="5 x 5" Click="SquareFiveButton_Click"
                    Style="{StaticResource HomeButtonStyle}"
                    Width="198" Height="109"
                    Canvas.Left="105" Canvas.Top="119" >
                <Button.RenderTransform>
                    <RotateTransform Angle="-30" />
                </Button.RenderTransform>
            </Button>

            <Button Content="10 x 10" Click="SquareTenButton_Click"
                    Style="{StaticResource HomeButtonStyle}"                    
                    Height="95" Width="203"
                    Canvas.Left="6" Canvas.Top="201"/>

            <Button Content="{Binding Path=LocalizedResources.Instructions, Source={StaticResource LocalizedStrings}}"
                    Click="InstructionsButton_Click"
                    Height="103" Width="187" d:LayoutRounding="Auto"
                    Style="{StaticResource HomeButtonStyle}"
                    Canvas.Left="285" Canvas.Top="127">
                <Button.RenderTransform>
                    <RotateTransform Angle="21" />
                </Button.RenderTransform>
            </Button>

            <Button Content="{Binding Path=LocalizedResources.Records, Source={StaticResource LocalizedStrings}}"
                    Click="RecordsButton_Click"
                    Height="120" Width="180"
                    Style="{StaticResource HomeButtonStyle}"
                    d:LayoutRounding="Auto"
                    Canvas.Left="-5" Canvas.Top="413">
                <Button.RenderTransform>
                    <RotateTransform Angle="-40" />
                </Button.RenderTransform>
            </Button>

            <Button Content="{Binding Path=LocalizedResources.About, Source={StaticResource LocalizedStrings}}"
                    Click="AboutButton_Click" 
                    Height="85" Width="224"
                    Style="{StaticResource HomeButtonStyle}"
                    Canvas.Left="190" Canvas.Top="419" />

            <Image Source="Phil/saluta.png"
                   Stretch="Fill" IsHitTestVisible="False"
                   Height="196" Width="272"
                   Canvas.Left="163" Canvas.Top="253" />
        </Canvas>
    </Grid>
</phone:PhoneApplicationPage>