<phone:PhoneApplicationPage 
    x:Class="SgarbiMix.PlaySoundPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    shell:SystemTray.IsVisible="True">

    <toolkit:TransitionService.NavigationOutTransition>
        <toolkit:NavigationOutTransition>
            <toolkit:NavigationOutTransition.Backward>
                <toolkit:SlideTransition Mode="SlideRightFadeOut" />
            </toolkit:NavigationOutTransition.Backward>
            <toolkit:NavigationOutTransition.Forward>
                <toolkit:SlideTransition Mode="SlideLeftFadeOut" />
            </toolkit:NavigationOutTransition.Forward>
        </toolkit:NavigationOutTransition>
    </toolkit:TransitionService.NavigationOutTransition>

    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush ImageSource="sfondo.jpg"
                        Stretch="UniformToFill" />
        </Grid.Background>


        <Button Content="Capra!" Click="Capra_Click"
                Height="63" Width="468" Foreground="#FFFFEBAC" Background="#7A000000" Margin="12,12,0,693" FontSize="22" BorderThickness="0" />

        <Button Content="Taci!" Click="Taci_Click"
                Height="63" Width="468" Foreground="#FFFFEBAC" Background="#7A000000" Margin="12,75,0,630" FontSize="22" BorderThickness="0" />

        <Button Content="Ignorante!" Click="Ignorante_Click"
                Height="63" Width="468" Margin="0,0,12,12"
                VerticalAlignment="Bottom" FontSize="22"
                Foreground="#FFFFEBAC" Background="#7A000000" 
                BorderThickness="0" />
        
        <Button Content="E' un crimine!" Click="Crimine_Click" Background="#7A000000" BorderThickness="0"  FontSize="22" Foreground="#FFFFEBAC" Height="63" Margin="12,137,0,568" Width="468" />
        <Button Content="Fascista!" Click="Fascista_Click" Background="#7A000000" BorderThickness="0"  FontSize="22" Foreground="#FFFFEBAC" Height="63" Margin="12,203,0,502" Width="468" />
    
    </Grid>

</phone:PhoneApplicationPage>