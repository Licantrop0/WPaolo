<UserControl
    x:Class="TouchColors.Controls.MicrophoneVisualizer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" Unloaded="UserControl_Unloaded">

    <Grid>
      <StackPanel Orientation="Horizontal">
         <TextBlock FontSize="40" Text="Volume:" Margin="6,0" />
         <TextBlock x:Name="Score" FontSize="40" Text="" FontFamily="Segoe MDL2 Assets"/>
       <ItemsControl Name="Bars">
          <ItemsControl.ItemTemplate>
             <DataTemplate>
               <Rectangle Height="{Binding}" Fill="Red" Stroke="Black" Width="5" />
            </DataTemplate>
          </ItemsControl.ItemTemplate>
          <ItemsControl.ItemsPanel>
             <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal"/>
             </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
       </ItemsControl>
      </StackPanel>
   </Grid>
</UserControl>
