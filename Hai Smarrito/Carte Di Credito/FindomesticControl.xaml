<UserControl x:Class="NientePanico.Carte_Di_Credito.FindomesticControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:ec="clr-namespace:Microsoft.Expression.Interactivity.Core;assembly=Microsoft.Expression.Interactions"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="480">

    <ScrollViewer Background="{StaticResource PhoneBackgroundBrush}">
        <StackPanel Margin="12,0">
            <TextBlock Style="{StaticResource DescriptionTextStyle}">
                Blocca tutti i tipi di carte&#32;
                <Bold>Findomestic</Bold>&#32;(Carta Aura, Carta Aura Gold, Carta Nova, Carta Option Plus)
                a seconda di dove ti trovi:
            </TextBlock>

            <Button Content="Italia" Click="FindomesticItalia_Click" />
            <Button Content="Estero" Click="FindomesticEstero_Click" />


        </StackPanel>
    </ScrollViewer>
</UserControl>
