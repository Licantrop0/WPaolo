<phone:PhoneApplicationPage 
    x:Class="FillTheSquare.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="800"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    shell:SystemTray.IsVisible="False">

    <Grid x:Name="LayoutRoot" Background="{StaticResource BackgroundImageBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <MediaElement Volume="1"
                      Source="/FillTheSquare;component/Sounds/musichetta.mp3"
                      MediaEnded="MediaElement_MediaEnded"
                      MediaFailed="MediaElement_MediaFailed"
                      MediaOpened="MediaElement_MediaOpened" />

        <TextBlock Style="{StaticResource SquareTitleStyle}" Grid.Row="0"
                   FontSize="64" Text="Phil  the  Square" Margin="0,24" />

        <Canvas x:Name="ContentPanel" Margin="12" Grid.Row="1" >
            <Button Content="{Binding Path=LocalizedResources.Easy, Source={StaticResource LocalizedStrings}}" 
                    Click="SquareFiveButton_Click"
                    Style="{StaticResource HomeButtonStyle}"
                    Width="198" Height="93.812"
                    Canvas.Left="279.985" Canvas.Top="112.891" UseLayoutRounding="False" d:LayoutRounding="Auto" FontSize="29.333" FontWeight="Bold" >
                <Button.RenderTransform>
                    <RotateTransform Angle="26" />
                </Button.RenderTransform>
            </Button>

            <Button Content="{Binding Path=LocalizedResources.Hard, Source={StaticResource LocalizedStrings}}" 
                    Click="SquareTenButton_Click"
                    Style="{StaticResource HomeButtonStyle}"                    
                    Height="87" Width="203"
                    Canvas.Left="6" Canvas.Top="174"/>

            <Button Content="{Binding Path=LocalizedResources.Instructions, Source={StaticResource LocalizedStrings}}"
                    Click="InstructionsButton_Click"
                    Height="103" Width="270" 
                    Style="{StaticResource HomeButtonStyle}"
                    Canvas.Left="108" Canvas.Top="24" >
            </Button>

            <Button Content="{Binding Path=LocalizedResources.Records, Source={StaticResource LocalizedStrings}}"
                    Click="RecordsButton_Click"
                    Height="96.419" Width="180"
                    Style="{StaticResource HomeButtonStyle}"
                    d:LayoutRounding="Auto"
                    Canvas.Left="2" Canvas.Top="410" UseLayoutRounding="False">
                <Button.RenderTransform>
                    <RotateTransform Angle="-40" />
                </Button.RenderTransform>
            </Button>

            <Button Content="{Binding Path=LocalizedResources.About, Source={StaticResource LocalizedStrings}}"
                    Click="AboutButton_Click" 
                    Height="85" Width="224"
                    Style="{StaticResource HomeButtonStyle}"
                    Canvas.Left="190" Canvas.Top="404" />

            <Image Source="Phil/saluta.png"
                   Stretch="Fill" IsHitTestVisible="False"
                   Height="196" Width="272"
                   Canvas.Left="163" Canvas.Top="239" />
            <!--<Button Canvas.Left="78" Canvas.Top="521"
            Content="congratulations" Height="71" Width="238" Click="Button_Click" />-->
     
        </Canvas>
    </Grid>
</phone:PhoneApplicationPage>